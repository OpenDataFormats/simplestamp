{
  "name": "@opendataformats/simplestamp",
  "version": "0.2.0",
  "description": "ECMAScript/JS 6 Node library for creating simple, compact, portable Open Timestamps attestations.",
  "keywords": [
    "simplestamp",
    "opentimestamps",
    "timestamp",
    "blockchain",
    "bitcoin",
    "attestation"
  ],
  "main": "index.js",
  "scripts": {
    "docs": "jsdoc --configure jsdocs.json --destination ../../../docs/jsdocs",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "start": "node frontend.js",
    "test": "jest && coveralls < ../../../docs/coverage/lcov.info",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenDataFormats/simplestamp.git"
  },
  "author": {
    "name": "David Arvan",
    "email": "david@opendataformats.org"
  },
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/OpenDataFormats/simplestamp/issues"
  },
  "homepage": "https://github.com/OpenDataFormats/simplestamp",
  "dependencies": {
    "google-protobuf": "^3.15.8"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "../../../docs/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/models/"
    ]
  }
}
